<div id="games-wrapper" class="list-wrapper">
    <h2>Games</h2>
    <ul class="games-list list">
    	<li class="head">
            <div class="white">White</div>
            <div class="black">Black</div>
            <div class="winner">Winner</div>
        </li>

        <% @all_games.each do |game| %>
	        <li>
	            <div class="white">
                    <a class="list-link" href="/players/<%= game.white_id %>">
                        <% player = Player.find(game.white_id) %>
                        <%= "#{player.first_name} #{player.last_name}" %>
                    </a> <a class="subtle-rating"><%= "(#{game.white_rating})" %><a>
                </div>
	            
                <div class="black">
                    <a class="list-link" href="/players/<%= game.black_id %>">
                        <% player = Player.find(game.black_id) %>
                        <%= "#{player.first_name} #{player.last_name}" %>
                    </a> <a class="subtle-rating"><%= "(#{game.black_rating})" %><a>
                </div>

	            <div class="winner">
                        <%= game.winner %>
                </div>

                <div class="remove">
                    <form method="post" action="/games/<%= game.id %>">
                        <button type="Submit" class="remove-button">Remove</button>
                    </form>
                </div>
	        </li>
        <% end %>

    </ul>
</div>